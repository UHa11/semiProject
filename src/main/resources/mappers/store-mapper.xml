<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kh.project.cse.boot.mappers.StoreMapper">

    <resultMap id="storeResult" type="Store">
        <result column="STORE_NO" property="storeNo"/>
        <result column="STORE_NAME" property="storeName"/>
        <result column="STORE_DATE" property="storeDate"/>
        <result column="STORE_STATUS" property="storeStatus"/>
    </resultMap>

    <insert id="insertStore">
        INSERT INTO STORE(
        STORE_NO,
        STORE_NAME
        ) VALUES (
        SEQ_ST.NEXTVAL,
        #{storeName}
        )
    </insert>
    <select id="checkStoreName" resultType="_int">
        SELECT COUNT(*)
        FROM STORE
        WHERE STORE_NAME = #{checkStore}
    </select>
    <select id="checkStoreNo" resultType="_int">
        SELECT COUNT(*)
        FROM STORE
        WHERE STORE_NO = #{storeNo}
        AND STORE_STATUS = 1
    </select>
    <select id="checkStore" resultType="_int">
        SELECT COUNT(*)
        FROM STORE
        WHERE STORE_NAME = #{checkStore}
        AND STORE_STATUS = 1
    </select>
</mapper>